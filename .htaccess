# .htaccess - Configuração de segurança e URLs

# Habilita Rewrite Engine
RewriteEngine On

# Redireciona para index.php se arquivo não existir
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?page=$1 [QSA,L]

# Protege diretórios sensíveis
<FilesMatch "\.(csv|sql|log)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protege arquivos de configuração
<FilesMatch "^(config\.php)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Proteção contra directory listing
Options -Indexes

# Proteção XSS
<IfModule mod_headers.c>
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
</IfModule>